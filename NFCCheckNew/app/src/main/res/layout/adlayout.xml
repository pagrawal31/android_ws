<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/adImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_margin"
            android:scaleType="fitXY"
            android:src="@drawable/jewelad" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/adImageView"
            android:layout_alignTop="@id/adImageView"
            android:layout_alignRight="@id/adImageView"
            android:layout_alignBottom="@id/adImageView"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="@string/ad_description"
            android:textSize="@dimen/text_on_margin"
            android:textStyle="bold"
            android:textColor="#FF00C2" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
